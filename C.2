int print(char* arr)
{
	if (*arr != '\0')
	{
		return	1 + print(arr+1);
		//p++:p=p+1 p的值会改变    p+1:访问p的下一个地址
	}
	else
		return 0;
}

int main()
{
	char arr[] = "bit";
	int len = print(arr);
	printf("%d\n", len);

	return 0;
}





